- name: Create a Basic TPU VM
  google.cloud.gcp_tpuv2_vm:
    name: "{{`{{ resource_name }}`}}"
    description: "A test TPU VM"
    runtime_version: "tpu-vm-base"
    project: "{{`{{ gcp_project }}`}}"
    zone: "us-central1-a"
    auth_kind: "{{`{{ gcp_cred_kind }}`}}"
    service_account_file: "{{`{{ gcp_cred_file }}`}}"
    state: present
